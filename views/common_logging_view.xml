<openerp>
    <data>

      <menuitem id="menu_logging" name="Logging"
                parent="base.menu_administration"/>
      
      <record id="logging_form_view" model="ir.ui.view">
      <field name="name">Logging</field>
      <field name="model">logging</field>
      <field name="type">form</field>
      <field name="arch" type="xml">
        <form string="Logging" class="oe_form_configuration">
          <header/>
          <sheet>
            <group name="Logging information">
              <group name="col1">
                <field name="summary"/>
                <field name="description"/>
              </group>
              <group name="col2">
                <field name="date"/>
                <field name="level"/>
              </group>
            </group>
            <separator string="Details"/>
            <group name="details1">
              <field name="model_id"/>
            </group>
          </sheet>
          <footer />
        </form>
      </field>
    </record>
    <record id="logging_tree_view" model="ir.ui.view">
      <field name="name">Logging</field>
      <field name="model">logging</field>
      <field name="type">tree</field>
      <field name="arch" type="xml">
        <tree colors="blue:level=='debug';#FF8000:level=='warning';#FF5500:level=='error';red:level=='fatal'">
          <field name="date"/>
          <field name="model_id"/>
          <field name="level"/>
          <field name="summary"/>
          <field name="description"/>
        </tree>
      </field>
    </record>
    <record id="action_logging" model="ir.actions.act_window">
      <field name="name">Logging</field>
      <field name="res_model">logging</field>
      <field name="view_type">form</field>
      <field name="view_mode">tree,form</field>
    </record>
    <menuitem name="Logging" id="menu_logging_details"
              action="action_logging"
              parent="menu_logging"/>
    
  </data>
</openerp>